
# BUILD APP
FROM node:11-alpine

EXPOSE 8080

RUN npm config set package-lock false
RUN npm i yarn -g --yes

WORKDIR /app

COPY ./src/identity-srv     ./src/identity-srv/src
COPY ./src/identity-srv     ./src/identity-srv
COPY ./packages             ./packages
COPY ./package.json         ./
COPY ./lerna.json           ./
COPY ./yarn.lock            ./

RUN ls

RUN yarn

WORKDIR /app/src/identity-srv

ENTRYPOINT ["yarn", "run", "start"]
